		      boolean []flag = new boolean[fence.length];
    		if(fence[0] != i) {
    			count[0]++;
    			flag[0] = true;
    		}
	    	  
    		for(int j = 1; j < fence.length; j++) {
    			// 새로 칠했을때
    			if(flag) {
			    	if(fence[j-1] != fence[j]) {
			    		
			    	}
    			}
    			// 칠을 하지 않을때
    			else {
    				
    			}
		    		  
		    }
		    	  



	     
	      }

	      
	      return answer;
	  }
	  
