	  public int solution(int[] fence) {
	      int answer = 0;
	      int count[] = {0,0};
	      // 첫번째 울타리가 흰색
	      if(fence[0] == 0) {
	    	  for(int i = 1; i < fence.length; i++) {

	    		  if(fence[i-1] == fence[i]) {
	    			  
	    		  }
	    		  
	    	  }
	    	  
	      }
	      // 첫번째 울타리가 검은색
	      else {
    		  if(fence[0] != 0) {
    			  count[0]++;
    			  fence[0] = 1;
    		  }
	    	  
	    	  
	    	  
	      }
	     

	      
	      return answer;
	  }
	  
}
